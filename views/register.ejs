<% if (date) { %>
<div class="panel panel-primary">
  <!-- Default panel contents -->
  <div class="panel-heading"><%= date%> 列表</div>
  <!-- Table -->
  <table class="table">
    <tbody>
      <tr>
        <th>編號</th>
        <th>申請人</th>
        <th>日期</th>
        <th>時間</th>
      </tr>
    </tbody>
    <% _.forEach(rows, function(value, key) { %>
    <tr>
      <td><%= (key + 1) %></td>
      <td><%= value.owner.username %></td>
      <td><%= value.getDate() %></td>
      <td><%= value.getTime() %></td>
    </tr>
    <% }); %>
  </table>
</div>
<% } %>
<h1 class="page-header">申請表單</h1>
<div class="panel panel-warning">
  <div class="panel-heading">申請測量時間</div>
  <div class="panel-body">
    <form class="form-horizontal" action="register" method="post">
      <div class="form-group">
        <label for="date" class="col-sm-2 control-label">日期</label>
        <div class="col-sm-10">
          <input id="datepicker" name="date" type="text" class="form-control" placeholder="請選擇日期" value="<% if (date) { %><%= date %><% } %>" />
          <span id="helpBlock2" class="help-block">目前只有開放禮拜一，禮拜二，禮拜四</span>
        </div>
      </div>
      <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">時間</label>
        <div class="col-sm-10">
          <select class="form-control" name="time">
            <option value="0">請選擇</option>
            <option value="1">18:30 ~ 19:10</option>
            <option value="2">19:10 ~ 19:50</option>
            <option value="3">19:50 ~ 20:30</option>
          </select>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-primary">送出申請</button>
        </div>
      </div>
    </form>
  </div>
</div>
